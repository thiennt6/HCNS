
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="text-center auth-logo-text">
    <h4 class="mt-0 mb-3 mt-5">Quên mật khẩu</h4>
    <p class="text-muted mb-0">Nhập tài khoản của bạn và kiểm tra email đã đăng ký với hệ thống để đặt lại mật khẩu</p>
</div> <!--end auth-logo-text-->


@using (Html.BeginForm("quen-mat-khau", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-parsley auth-form my-4" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="useremail">Tài khoản</label>
        <div class="input-group mb-3">
            <span class="auth-form-icon">
                <i class="dripicons-mail"></i>
            </span>
            <input data-parsley-required-message="Vui lòng nhập tài khoản." parsley-type="email" type="text" class="form-control" name="taikhoan" placeholder="Nhập tài khoản" required>
        </div>
    </div><!--end form-group-->


    <div class="form-group mb-0 row">
        <div class="col-12 mt-2">
            <button id="submit" class="btn btn-gradient-primary btn-round btn-block waves-effect waves-light" type="submit">Khôi phục <i class="fas fa-sign-in-alt ml-1"></i></button>
        </div><!--end col-->
        <div class="col-12 mt-2">
            <a id="submit" class="btn btn-gradient-danger btn-round btn-block waves-effect waves-light" href="/dang-nhap">Trở lại trang đăng nhập <i class="fas fa-user ml-1"></i></a>
        </div><!--end col-->
    </div> <!--end form-group-->
}
@section scripts {

    @if (ViewBag.msg != null)
    {
        <script>
            $(document).ready(function () {
                 Swal.fire(
                    '@Html.Raw(ViewBag.msg.tittle)',
                    '@Html.Raw(ViewBag.msg.messenger)',
                    '@Html.Raw(ViewBag.msg.type)'
                )
            });
        </script>
    }
}